<%- include ("./partials/header.ejs"); %>

<body>
    <%- include ("./partials/navbar.ejs"); %>

    <div class="container">
        <hr>
        <h1><%= pergunta.titulo%></h1>
        <p> <%= pergunta.descricao%></p>
        <hr>
        <form method="post" action="/salvarResposta">
            <h3>Responda</h3>
            <label for="">Responda</label>
            <textarea placeholder="Digite sua Resposta" class="form-control" name="corpo"></textarea><br>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-primary">Responder</button>,
        </form>

        <br><br>
        <h3>Respostas da Galera!!!</h3>
        <hr>

        <%if(respostas != null){%>
            <div>
                <%respostas.forEach(resposta =>{%>
                    <p><%= resposta.corpo %></p>
                    <hr>
                    <br><br>
                <%})%>
            </div>
        <%}%>
        


    </div>
    
</body>

<%- include ("./partials/footer.ejs"); %>